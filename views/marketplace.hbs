<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>Trusted Suppliers Marketplace</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f9f9f9;
      margin: 0;
    }

    header {
      background-color: #333;
      color: white;
      padding: 16px;
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: auto;
    }

    .logo {
      font-size: 24px;
      font-weight: bold;
    }

    nav ul {
      list-style: none;
      display: flex;
      gap: 20px;
    }

    nav a {
      text-decoration: none;
      color: white;
    }

    .section-title {
      text-align: center;
      margin-bottom: 24px;
    }

    .product-card {
      background: white;
      border: 1px solid #ddd;
      border-radius: 8px;
      width: 260px;
      padding: 16px;
      margin: 12px;
      display: inline-block;
      vertical-align: top;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      transition: transform 0.2s ease;
    }

    .product-card:hover {
      transform: translateY(-5px);
    }

    .product-card img {
      width: 100%;
      height: 160px;
      object-fit: cover;
      border-radius: 4px;
      margin-bottom: 12px;
    }

    .product-card h3 {
      margin: 8px 0 4px;
      font-size: 18px;
    }

    .product-card p {
      margin: 4px 0;
      color: #333;
    }

    .product-card button {
      background: #28a745;
      color: #fff;
      border: none;
      padding: 10px 18px;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 8px;
    }

    .product-card button:hover {
      background: #218838;
    }

    .search-bar {
      margin-bottom: 20px;
      text-align: center;
    }

    .search-bar input {
      padding: 10px;
      width: 300px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .search-bar button {
      padding: 10px 16px;
      margin-left: 8px;
      border: none;
      background-color: #28a745;
      color: #fff;
      border-radius: 4px;
      cursor: pointer;
    }

    #quantityModal {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.6);
      justify-content: center;
      align-items: center;
    }

    #quantityModal .modal-content {
      background: #fff;
      padding: 24px;
      border-radius: 8px;
      text-align: center;
      min-width: 300px;
    }

    #quantityModal input[type="number"] {
      width: 60px;
      padding: 8px;
      margin: 12px;
    }

    #quantityModal button {
      margin: 8px;
      background: #007bff;
      color: white;
      padding: 8px 16px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .supplier-grid {
      text-align: center;
    }

    footer {
      margin-top: 60px;
      text-align: center;
      padding: 20px;
      background: #f2f2f2;
    }
  </style>
</head>
<body>

  <!-- Header -->
  <header>
    <div class="container header-content">
      <div class="logo">
        <i class="fas fa-utensils"></i> StreetFood Connect
      </div>
      <nav>
        <ul>
          <li><a href="/home">Home</a></li>
          <li><a href="/features">Features</a></li>
          <li><a href="/marketplace">Marketplace</a></li>
          <li><a href="/howitworks">How It Works</a></li>
          <li><a href="/testimonial">Testimonials</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Marketplace Section -->
  <section class="section marketplace">
    <div class="container">
      <div class="section-title">
        <h2>Verified Supplier Marketplace</h2>
        <p>Find trusted suppliers for all your street food ingredients</p>
      </div>

      <div class="search-bar">
        <input type="text" id="searchInput" placeholder="Search products..." />
        <button onclick="searchSuppliers()"><i class="fas fa-search"></i> Search</button>
      </div>

      <div class="supplier-grid" id="productGrid"></div>
    </div>
  </section>

  <!-- Quantity Modal -->
  <div id="quantityModal">
    <div class="modal-content">
      <h4>Select Quantity (max <span id="maxQtySpan">0</span>):</h4>
      <input type="number" id="qtyInput" value="1" min="1" onchange="updateTotal()" />
      <p id="totalPrice">Total: ₹0</p>
      <button onclick="confirmPurchase()">Confirm Purchase</button>
      <button onclick="closeModal()">Cancel</button>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <div class="container">
      <p>&copy; 2025 StreetFood Connect. All rights reserved.</p>
    </div>
  </footer>

  <!-- JS Logic -->
  <script>
    document.addEventListener('DOMContentLoaded', fetchProducts);

    async function fetchProducts() {
      try {
        const resp = await fetch('/api/products');
        const data = await resp.json();
        const grid = document.getElementById('productGrid');
        grid.innerHTML = '';

        if (!data.products || !data.products.length) {
          grid.innerHTML = '<p>No products available.</p>';
          return;
        }
data.products.forEach(prod => {
  const imgUrl = prod.imageUrl || 'https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=260&q=80';
  const card = document.createElement('div');
  card.className = 'product-card';
  card.innerHTML = `
    <img src="${imgUrl}" alt="${prod.name}" class="product-image" />
    <h3>${prod.name}</h3>
    <p>Price: ₹${prod.price}</p>
    <button onclick="openQuantityModal(${prod.id}, ${prod.price}, ${prod.availableQty || 0})">Buy</button>
  `;
  grid.appendChild(card);
});



      } catch (err) {
        console.error('Error loading products:', err);
        document.getElementById('productGrid').innerHTML = '<p>Error loading products.</p>';
      }
    }

    let current = {};

    function openQuantityModal(productId, price, maxQty) {
      current = { productId, price, maxQty };
      document.getElementById('quantityModal').style.display = 'flex';
      document.getElementById('qtyInput').value = 1;
      document.getElementById('totalPrice').innerText = `Total: ₹${price}`;
      document.getElementById('maxQtySpan').innerText = maxQty;
    }

    function closeModal() {
      document.getElementById('quantityModal').style.display = 'none';
    }

    function updateTotal() {
      const qty = parseInt(document.getElementById('qtyInput').value, 10);
      const total = qty * current.price;
      document.getElementById('totalPrice').innerText = `Total: ₹${total}`;
    }

    async function confirmPurchase() {
      const qty = parseInt(document.getElementById('qtyInput').value, 10);
      if (isNaN(qty) || qty < 1) {
        alert('Please enter a valid quantity.');
        return;
      }

      const fakeOrderId = Math.floor(Math.random() * 1000000);
      alert(`✅ Purchase confirmed! Order ID: ${fakeOrderId}`);
      console.log('Simulated purchase:', {
        productId: current.productId,
        quantity: qty,
        orderId: fakeOrderId
      });
      closeModal();
    }

    function searchSuppliers() {
      const query = document.getElementById('searchInput').value.toLowerCase();
      document.querySelectorAll('.product-card').forEach(card => {
        card.style.display = card.innerText.toLowerCase().includes(query)
          ? 'inline-block'
          : 'none';
      });
    }
  </script>

</body>
</html>
